<!DOCTYPE html>
<html>
<head>
  <title>Student-Manager-App</title>
  <link rel="icon" href="/photo/logo.png">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="bg-info">
  <div class="main-content">
    <div class="row">
      <div class="col-md-6 offset-md-3" style="background-color: rgb(255, 255, 255);margin-top: 25px;padding:20px;">
        {{>header}}
        <h1>Create Questions for test</h1>
        {{!-- {{teacher_id}} --}}
        <form action="/mcq/{{teacher_id}}" method="POST">
          <table>
            <tr>
              <th>
                <label>studentName</label>
              </th>
            </tr>
            <tr>
              <td>
                <input id="studentName" type="text" name="studentName" placeholder="studentName" required>
              </td>
            </tr>
            <tr>
              <th>
                <label>Subject </label>
              </th>
              <th>
                <label>teacherName </label>
              </th>
            </tr>
            <tr>
              <td>
                <input id="subject" type="text" name="subject" placeholder="subject" value="{{course.subject}}"
                  required>
              </td>
              <td>
                <input id="teacherName" type="text" name="teacherName" placeholder="teacherName"
                  value="{{course.teacherName}}" required>
              </td>
            </tr>
            <tr>
              <th>
                <label>Enter no of question to Add </label>
              </th>
            </tr>
            <tr>
              <td>
                <input id="noOfQuestion" type="text" onkeyup="MCQquestions()" name="noOfQuestion"
                  placeholder="noOfQuestion" required>
              </td>
            </tr>
          </table>
          <div id="demo"></div>
          <button type="submit">SUBMIT</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    function MCQquestions() {
      var x = "", i;
      var num = document.getElementById("noOfQuestion").value;
      for (i = 1; i <= num; i++) {
        x = x + "<table><h2>" + i + "</h2> <tr><th>Question</th></tr> <tr><td><input id='mcq_question' type='text' name='mcq_question' placeholder='mcq_question' required><td> </tr> <tr> <th> <label>options </label> </th> </tr> <tr> <td> <input id='options' type='text' name='options' placeholder='option 1' required> </td> <td><input id='options' type='text' name='options' placeholder='option 2' required></td> </tr> <tr> <td> <input id='options' type='text' name='options' placeholder='option 3' required></td> <td> <input id='options' type='text' name='options' placeholder='option 4' required> </td></tr> <tr> <th> <label>answer </label> </th> </tr> <tr> <td> <input id='answer' type='text' name='answer' placeholder='answer' required> </td> </tr></table>";
      }
      document.getElementById("demo").innerHTML = x;
    }
  </script>
    {{>footer}}
</body>

</html>
